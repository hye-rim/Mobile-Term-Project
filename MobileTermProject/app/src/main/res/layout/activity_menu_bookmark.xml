<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.mobile.hyerim.mobiletermproject.Activity.Menu.BookmarkActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/content_calender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.mobile.hyerim.mobiletermproject.Activity.Menu.CalenderActivity"
        tools:showIn="@layout/activity_menu_calender"
        >
        <LinearLayout
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_title_height">
            <ImageView
                android:src="@drawable/ic_menu_bookmark"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="20dp"
                android:text="@string/bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/corner_shape"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/angelinus_caramel_macchiato"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/textview_title_padding"
                    android:layout_width="130dp"
                    android:layout_height="60dp">
                    <TextView
                        android:textSize="12dp"
                        android:text="엔제리너스"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="15dp"
                        android:text="카라멜마끼아또"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:gravity="left"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/textview_title_padding"
                    android:layout_width="130dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:id="@+id/bookmark_image_item_won"
                        android:src="@drawable/ic_won"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:id="@+id/bookmark_tv_price"
                        android:layout_toRightOf="@+id/bookmark_image_item_won"
                        android:text="5400원"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="false" />
                    <ImageView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:layout_below="@+id/bookmark_image_item_won"
                        android:id="@+id/bookmark_image_item_kcal"
                        android:src="@drawable/ic_calorei"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:text="279kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/bookmark_tv_price"
                        android:layout_toRightOf="@+id/bookmark_image_item_kcal"
                        android:layout_centerVertical="false"
                        android:layout_centerInParent="false"
                        android:layout_alignParentRight="false" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/corner_shape"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/starbucks_white_chocolate_mocha"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/textview_title_padding"
                    android:layout_width="130dp"
                    android:layout_height="60dp">
                    <TextView
                        android:textSize="12dp"
                        android:text="스타벅스"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="15dp"
                        android:text="화이트 초콜릿 모카"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:gravity="left"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/textview_title_padding"
                    android:layout_width="130dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:id="@+id/bookmark_image_item_won_2"
                        android:src="@drawable/ic_won"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:id="@+id/bookmark_tv_price_2"
                        android:layout_toRightOf="@+id/bookmark_image_item_won_2"
                        android:text="5100원"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="false" />
                    <ImageView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:layout_below="@+id/bookmark_image_item_won_2"
                        android:id="@+id/bookmark_image_item_kcal_2"
                        android:src="@drawable/ic_calorei"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_marginLeft="@dimen/textview_title_padding"
                        android:text="260kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/bookmark_tv_price_2"
                        android:layout_toRightOf="@+id/bookmark_image_item_kcal_2"
                        android:layout_centerVertical="false"
                        android:layout_centerInParent="false"
                        android:layout_alignParentRight="false" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
